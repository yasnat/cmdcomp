{
    "$defs": {
        "V2AppInfo": {
            "additionalProperties": false,
            "description": "your cli app info.",
            "properties": {
                "name": {
                    "title": "your cli app name.",
                    "type": "string"
                },
                "alias": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "items": {
                                "type": "string"
                            },
                            "type": "array"
                        }
                    ],
                    "title": "alias of the cli app name."
                }
            },
            "required": [
                "name"
            ],
            "title": "V2AppInfo",
            "type": "object"
        },
        "V2CmdCompInfo": {
            "additionalProperties": false,
            "description": "cmdcomp info.",
            "properties": {
                "version": {
                    "const": "2",
                    "title": "cmdcomp config schema version."
                }
            },
            "required": [
                "version"
            ],
            "title": "V2CmdCompInfo",
            "type": "object"
        },
        "V2Command": {
            "additionalProperties": false,
            "properties": {
                "arguments": {
                    "additionalProperties": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "items": {
                                    "type": "string"
                                },
                                "type": "array"
                            },
                            {
                                "$ref": "#/$defs/V2NormalArgument"
                            },
                            {
                                "$ref": "#/$defs/V2FileArgument"
                            }
                        ]
                    },
                    "title": "arguments of the command.",
                    "type": "object"
                }
            },
            "required": [
                "arguments"
            ],
            "title": "V2Command",
            "type": "object"
        },
        "V2FileArgument": {
            "additionalProperties": false,
            "properties": {
                "type": {
                    "const": "file",
                    "title": "Type"
                },
                "base_path": {
                    "title": "path of the directory from which to base filename completion.",
                    "type": "string"
                }
            },
            "required": [
                "type",
                "base_path"
            ],
            "title": "V2FileArgument",
            "type": "object"
        },
        "V2NormalArgument": {
            "additionalProperties": false,
            "properties": {
                "type": {
                    "anyOf": [
                        {
                            "const": "normal"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null,
                    "title": "Type"
                },
                "description": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null,
                    "title": "description of the argument."
                },
                "candidates": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "items": {
                                "type": "string"
                            },
                            "type": "array"
                        }
                    ],
                    "title": "candidates of the argument."
                }
            },
            "required": [
                "candidates"
            ],
            "title": "V2NormalArgument",
            "type": "object"
        }
    },
    "additionalProperties": false,
    "description": "cmdcomp config v2.",
    "properties": {
        "cmdcomp": {
            "$ref": "#/$defs/V2CmdCompInfo"
        },
        "app": {
            "$ref": "#/$defs/V2AppInfo"
        },
        "root": {
            "$ref": "#/$defs/V2Command"
        }
    },
    "required": [
        "cmdcomp",
        "app",
        "root"
    ],
    "title": "V2Config",
    "type": "object"
}
