{%- set func_name = "_" + app_name|replace("-","_") -%}
{%- set scope = "" -%}
#!/bin/zsh

{{ func_name }}() {
  local context curcontext=$curcontext state line
  declare -A opt_args
  local ret=1
  local cmd_name={{ app_name }}

  case $cmd_name in
{%- for cmd_name, command in commands.items() recursive %}
{%- set scope = scope + "_" + cmd_name %}
    {{ ([cmd_name] + command.aliases)|join("|") }})
{%- if command.subcommands|length != 0 %}
      local -a _{{ scope }}_subcmds
      _{{ scope }}_subcmds=(
{%- for subcmd_name, subcommand in command.subcommands.items() %}
        {% if subcommand.aliases|length == 0 -%}
          {{ subcmd_name }}
        {%- else -%}
          {{ "{" + ([subcmd_name] + subcommand.aliases)|join(",") + "}" }}
        {%- endif -%}
        '{% if subcommand.description is not none%}[{{ subcommand.description }}]{% endif %}'
{%- endfor %}
      )
{%- endif %}

      _arguments -C \
{%- for kwd_name, keyword in command.keyword_arguments.items() %}
        {% if keyword.aliases|length == 0 -%}
          {{ kwd_name }}
        {%- else -%}
          {{ "{" + ([kwd_name] + keyword.aliases)|join(",") + "}" }}
        {%- endif -%}
          '{%- if keyword.description is not none -%}[{{ keyword.description }}]{%- endif -%}
{%- if keyword.type == 'values' -%}
        :values:{{ "(" + keyword.values|map("string")|join(" ") + ")" }}
{%- elif keyword.type == 'file' -%}
        :file:_files{%- if keyword.base_path is not none %} -W "{{ keyword.base_path }}"{%- endif -%}
{%- elif keyword.type == 'command' -%}
        :command:_values '{{ kwd_name|trim("-") }}' $({{ keyword.execute }})
{%- elif keyword.type == 'flag' -%}
{%- endif -%}
        ' \
{%- endfor %}
{%- for pos_name, positional in command.positional_arguments.items() %}
        '{{ pos_name }}: arg:{{ "(" + positional.values|map("string")|join(" ") + ")" }}' \
{%- endfor %}
{%- if command.positional_wildcard_argument is not none %}
        '*: arg:{{ "(" + command.positional_wildcard_argument.values|map("string")|join(" ") + ")" }}' \
{%- elif command.subcommands|length != 0 %}
        1': :_values "subcommand" ${_{{ scope }}_subcmds[@]}' \
        '*:: :->args' \
{%- endif %}
        && ret=0
{% if command.subcommands|length != 0 %}
      cmd_name=$words[1]
      case $state in
        args)
          case $cmd_name in
{{- loop(command.subcommands.items())|indent(width=8) }}
          esac
          ;;
      esac
{%- endif %}
      ;;
{%- endfor %}
  esac

  return ret
}

compdef {{ func_name }} {{ ([app_name] + app_aliases)|join(" ") }}
